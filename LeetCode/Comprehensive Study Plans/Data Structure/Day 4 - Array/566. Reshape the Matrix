import numpy as np
class Solution:
    def matrixReshape(self, mat: List[List[int]], r: int, c: int) -> List[List[int]]:
        # Using 'try - except' to satisfy boundary conditions & catch the exception
        # Using 'np.reshape()' to modify the given matrix
        try :
            return np.reshape(mat,(r,c))
        except :
            return mat
        
